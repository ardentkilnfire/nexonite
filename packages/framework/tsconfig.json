{
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "strict": true,
        "declaration": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "exactOptionalPropertyTypes": false,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "$/*": ["./src/*"],
            "$types/*": ["./src/lib/types/*"],
            "$utils/*": ["./src/lib/utils/*"],
        }
    },
    "include": ["src/**/*.ts", "tsup.config.ts"]
}
